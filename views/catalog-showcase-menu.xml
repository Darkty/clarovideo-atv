<?xml version="1.0" encoding="UTF-8" ?>
<atv>

    <head>
        <script src="http://mcbkairrulo.local/clarovideo-atv/js/main.js" />
    </head>

    <body>
        <listWithPreview id="com.sample.previews">
            <header>
                <simpleHeader accessibilityLabel="Previews">
                    <title>Previews</title>
                </simpleHeader>
            </header>
            <menu>
                <sections>
                    <menuSection>
                        <items>
                            <oneLineMenuItem id="list_0" accessibilityLabel="Keyed preview with square artwork">
                                <label>Keyed Preview with Square Artwork</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_1" accessibilityLabel="Keyed Preview with Movie Poster Artwork">
                                <label>Keyed Preview with Movie Poster Artwork</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_2" accessibilityLabel="Keyed Preview with 16x9 Artwork">
                                <label>Keyed Preview with 16x9 Artwork</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_3" accessibilityLabel="Long Description Preview">
                                <label>Long Description Preview</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_4" accessibilityLabel="Cross Fade">
                                <label>Cross Fade</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="image_preview" accessibilityLabel="Image preview">
                                <label>Image</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_5" accessibilityLabel="Continuously Randomized parade">
                                <label>Parade: Continuously Randomize</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_6" accessibilityLabel="Random once, then in order parade">
                                <label>Parade: Serialize Images (randomize once, then in order)</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_7" accessibilityLabel="In order parade">
                                <label>Parade: In Order</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_8" accessibilityLabel="Media preview">
                                <label>General media preview</label>
                            </oneLineMenuItem>

                            <oneLineMenuItem id="list_9" accessibilityLabel="Baseball Preview">
                                <label>Baseball Preview</label>
                            </oneLineMenuItem>
                        </items>
                    </menuSection>
                </sections>
            </menu>
            <preview>
                <paradePreview>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie1.png</image>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie2.png</image>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie3.png</image>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie4.png</image>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie5.png</image>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie6.png</image>
                    <image>http://mcbkairrulo.local/clarovideo-atv/images/dummy/movie7.png</image>
                </paradePreview>
            </preview>
        </listWithPreview>
    </body>
</atv>
